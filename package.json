{
  "name": "showcase",
  "version": "1.0.0",
  "description": "MERN stack ",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client cd client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "yarn install --prefix client && npm run build --prefix client"
  },
  "author": "Alex",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.2",
    "express": "^4.17.1",
    "mongoose": "^5.8.7"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  }
}
